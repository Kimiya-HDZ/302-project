<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
           fx:controller="WisdomBites.controller.HomePageController"
           prefWidth="900" prefHeight="650"
           style="-fx-background-color: #efddbb;">

    <!-- clock + date aligned top-left -->
    <AnchorPane StackPane.alignment="TOP_LEFT">
        <VBox fx:id="clockContainer" spacing="8"
              AnchorPane.topAnchor="10.0"
              AnchorPane.leftAnchor="20.0"
              alignment="CENTER">

            <!-- Date Label -->
            <Label fx:id="dateLabel"
                   style="-fx-font-size: 18px;
                      -fx-text-fill: #5a3921;
                      -fx-font-family: 'Segoe UI Semibold', monospace;" />

            <!-- Digital Time -->
            <Label fx:id="digitalClockLabel"
                   style="-fx-font-size: 18px;
                      -fx-text-fill: #5a3921;
                      -fx-background-color: #fdd28e;
                      -fx-background-radius: 10;
                      -fx-padding: 4 10;
                      -fx-font-family: monospace;" />

            <!-- Analog Clock -->
            <StackPane alignment="CENTER">
                <Pane fx:id="analogClockPane"
                      prefWidth="100" prefHeight="100"
                      style="-fx-background-color: transparent;" />
            </StackPane>
        </VBox>
    </AnchorPane>


    <VBox spacing="20" alignment="CENTER" StackPane.alignment="CENTER">
        <Label fx:id="welcomeLabel" style="
           -fx-text-fill: #5a3921;
           -fx-font-size: 22px;
           -fx-font-weight: bold;
           -fx-font-family: 'Segoe UI', monospace, monospace;
           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0.5, 0, 1);
           -fx-padding: 0 0 10 0;
       "/>

        <!-- Top buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="predictionsButton" text="Predictions"
                    style="-fx-background-color: #fdd28e;
                    -fx-background-radius: 20;
                    -fx-font-size: 16px;
                    "/>

            <Button fx:id="todoButton" text="To-Do-List"
                    style="
                    -fx-background-color: #fdd28e;
                    -fx-background-radius: 20;
                    -fx-font-size: 16px;
                    "/>
        </HBox>

        <!-- Fortune cookie image -->
        <ImageView fx:id="cookieImage" fitWidth="180" preserveRatio="true" />

        <!-- Get Your Fortune Button -->
        <Button fx:id="fortuneButton" text="Get your fortune"
                style="-fx-background-color: #fdd28e;
                -fx-background-radius: 20;
                -fx-font-size: 16px;
                "/>

        <!-- Bottom buttons -->
        <HBox spacing="30" alignment="CENTER">
            <Button fx:id="studyTrackerButton" text="My Progress"
                    style="
                    -fx-background-color: #fdd28e;
                    -fx-background-radius: 20;
                    -fx-font-size: 16px;
                    "/>

            <Button fx:id="challengesButton" text="Daily Challenges"
                    style="
                    -fx-background-color: #fdd28e;
                    -fx-background-radius: 20;
                    -fx-font-size: 16px;
                    "/>

            <Button fx:id="logOutButton" text="log out!"
                    style="
                    -fx-background-color: #fdd28e;
                    -fx-background-radius: 20;
                    -fx-font-size: 16px;
                    "/>
        </HBox>

    </VBox>
</StackPane>
