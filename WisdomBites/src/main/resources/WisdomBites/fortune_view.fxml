<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="WisdomBites.controller.FortuneController"
            prefWidth="900" prefHeight="650"
            style="-fx-background-color: #f2dbb5;">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <ImageView fx:id="cookieImage" fitWidth="200" preserveRatio="true"/>
            <Label fx:id="fortuneText" wrapText="true" style="-fx-font-size: 18; -fx-text-fill: #5a3921;" />
            <Button fx:id="crackButton" onAction="#handleCrack"
                    text="Crack open your cookie"
                    style="-fx-background-color: #fdd28e; -fx-background-radius: 20; -fx-font-size: 18px;" />
        </VBox>
    </center>
</BorderPane>