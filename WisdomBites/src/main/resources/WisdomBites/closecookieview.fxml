<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
           fx:controller="WisdomBites.controller.CloseCookieController"
           prefWidth="1600" prefHeight="900"
           style="-fx-background-color: #f5e1c0;">

    <VBox spacing="30" alignment="TOP_CENTER" StackPane.alignment="TOP_CENTER">
        <padding>
            <Insets top="30"/>
        </padding>

        <!-- 상단바 -->
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-background-color: #e7b96c; -fx-background-radius: 0 0 20 20; -fx-padding: 20;">
            <Button fx:id="backButton" text="←"
                    style="-fx-background-color: transparent;
                           -fx-font-size: 24px;
                           -fx-text-fill: black;"/>
            <Label text="Fortune"
                   style="-fx-font-size: 28px;
                          -fx-font-weight: bold;
                          -fx-text-fill: black;"/>
        </HBox>

        <!-- 메인 콘텐츠 -->
        <ImageView fx:id="cookieImage" fitWidth="300" preserveRatio="true" />

        <!-- Open Another 버튼 -->
        <Button fx:id="openBtn" text="Open Another" onAction="#handleOpenButton"
                style="-fx-background-color: #d19e5a;
                       -fx-text-fill: black;
                       -fx-font-size: 20px;
                       -fx-background-radius: 20;
                       -fx-padding: 10 30 10 30;"/>

    </VBox>

</StackPane>
